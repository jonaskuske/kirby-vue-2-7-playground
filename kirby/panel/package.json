		"prosemirror-model": "^1.18.1",
		"prosemirror-schema-list": "^1.2.1",
		"prosemirror-view": "^1.27.0",
		"vue": "^2.7.10",
		"vuedraggable": "^2.24.3",
		"vuelidate": "^0.7.7",
		"vuex": "^3.6.2"
	},
	"devDependencies": {
